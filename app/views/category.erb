

<div class="container">
  <h2><%= @category.name %></h2>
  <h3>Type in your new post</h3>
  <form method="post" action="/new/post">
    <input type="hidden" name="post[category_id]" value="<%=@category.id %>">
    <input type="text" placeholder="title" name="post[title]"><br>
    <input type="text" placeholder="description" name="post[description]"><br>
    <input type="text" placeholder="email" name="post[email]"><br>
    <input type="text" placeholder="price" name="post[price]"><br>
    <input type="submit" value="Click this!">
  </form>


<% @category.posts.each do |post| %>
  <p>------------------------</p>
  <p><%= post.title %></p>
  <p><%= post.description %></p>
  <a href="http://www.gmail.com"><%= post.email %></a>
  <p><%= post.price %></p>
  <a href='/'>edit</a>
  <p>------------------------</p>
<% end %>


</div>
